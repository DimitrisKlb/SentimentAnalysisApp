@using SentimentAnalysisApp.Models
@model IEnumerable<SentimentAnalysisApp.Models.SearchRequest>

@{
    ViewBag.Title = "<SentimentAnalysis App's name pending...>";
}


<div class="page-header">
    <h1>My Requests</h1>
</div>



<div class="row">
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Open</h2>
            </div>

            <div class="panel-body">
                <ul class="list-unstyled">

                    @foreach (var item in Model)
                    {
                        if (item.TheStatus == Status.Open)
                        {
                            <li>
                                <span>
                                    @Html.DisplayFor(modelItem => item.TheSearchKeyword)
                                </span>
                                <small><a href="#">Execute</a></small>
                            </li>
                        }
                    }

                </ul>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Pending</h2>
            </div>

            <div class="panel-body">
                <ul class="list-unstyled">

                    @foreach (var item in Model)
                    {
                        if (item.TheStatus == Status.Pending)
                        {
                            <li>
                                <span>
                                    @Html.DisplayFor(modelItem => item.TheSearchKeyword)
                                </span>
                            </li>
                        }
                    }

                </ul>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Fulfilled</h2>
            </div>

            <div class="panel-body">
                <ul class="list-unstyled">

                    @foreach (var item in Model)
                    {
                        if (item.TheStatus == Status.Fulfilled)
                        {
                            <li>
                                <span>
                                    @Html.DisplayFor(modelItem => item.TheSearchKeyword)
                                </span>
                                <small><a href="#">Results</a></small>
                            </li>
                        }
                    }

                </ul>
            </div>
        </div>
    </div>
</div> 

@{
    var newSreq = new SearchRequest() {TheSearchKeyword = ""};
}
@Html.Partial("_CreateSearchRequest", newSreq)